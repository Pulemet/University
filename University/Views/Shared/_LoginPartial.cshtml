@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
    {
        @Html.AntiForgeryToken()

        <nav class = "main-nav">
            <ul>
                <li>@Html.ActionLink("Редактировать профиль", "Index", "Manage", routeValues: null, htmlAttributes: new { id = "ManageLink", @class = "cd-signin" }) </li>
               <li><a class="cd-signout" href="javascript:document.getElementById('logoutForm').submit()"> Выйти </a> </li>
            </ul>
        </nav>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Регистрация", "Register", "Account", routeValues: null, htmlAttributes: new {id = "registerLink", @class = "cd-signin"}) </li>
        <li>@Html.ActionLink("Войти", "Login", "Account", routeValues: null, htmlAttributes: new {id = "loginLink", @class = "cd-signup"}) </li>
    </ul>
}