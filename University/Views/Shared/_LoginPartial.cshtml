@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>@Html.ActionLink("Редактировать профиль", "Index", "Manage", routeValues: null, htmlAttributes: new { id = "ManageLink", @class = "cd-edit" }) </li>
            <li><a class="cd-signout" id="cd-signout" href="javascript:document.getElementById('logoutForm').submit()"> Выйти </a> </li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Регистрация", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "cd-register" }) </li>
        <li>@Html.ActionLink("Войти", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "cd-signup" }) </li>
    </ul>
}