@model University.Models.Dto.DialogDto

<style>
    #formMessages {
        height: 80%;
        overflow-y: scroll;
        margin-bottom: 20px;
        padding: 10px;
    }

    #currentDialog {
        height: 600px;
    }
</style>

<div id="currentDialog" class="form-horizontal col-md-6">
    <h4>@Model.Name</h4>
    <div id="formMessages">
        @{
            if (Model.Messages.Count == 0)
            {
                <div id="noMessages">
                    <p>Список сообщений пуст</p>
                </div>
            }
            else
            {
                foreach (var msg in Model.Messages)
                {
                    @Html.Partial("Message", msg)
                }
            }
        }
    </div>
    <div class="form-horizontal col-md-6 col-md-offset-3">
        @Html.Partial("PartialSendMessage")
    </div>
</div>

