@using System.Web.Mvc.Html
@using University.Models
@model IEnumerable<University.Models.Dto.DialogDto>
@{
    ViewBag.Title = "Index";
}

@Scripts.Render("~/scripts/jquery-3.1.1.js")
@Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")

<head>
    <script type="text/javascript" src="/scripts/script.js">
    </script>
    <script type="text/javascript" src="/scripts/communion.js">
    </script>
    <link href="/Content/Site.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/font-awesome/css/font-awesome.min.css">
    <style>
        .form-element-label-name {
            font: inherit;
            font-size: 120%;
        }

        .form-element-label-time {
            padding-left: 10px;
            font: inherit;
            font-size: 90%;
        }

        .form-element-textarea {
            width: 100%;
            max-width: 600px;
        }

        div {
            word-wrap: break-word;
        }

        #formMessages {
            height: 80%;
            overflow-y: scroll;
            margin-bottom: 20px;
            padding: 10px;
        }

        #currentDialog {
            height: 600px;
        }
    </style>
</head>

<div class="container">
    <div class="row">
        <div class="col-sm-3 col-md-2">
            @Html.Partial("../Home/PartialViewSaidBar")
        </div>

        <div class="col-md-4 col-md-offset-1">
            <div class="btn-panel btn-panel-conversation">
                <a href="#" class="btn col-lg-12 send-message-btn pull-right">
                    <i class="fa fa-plus"> Создать беседу</i>
                </a>
            </div>
            @Html.Partial("DialogsBar", Model)
            @Html.Partial("NewDialogBar", (List<ApplicationUser>) ViewData["Friends"])
        </div>

        <div class="row">
            <div class="message-wrap col-md-5" id="currentDialog">
                <h4 id="dialogName"> </h4>
                <div id="formMessages">
                    <p>Выберите диалог или создайте новый</p>
                </div>
                <div id="formSendMessage" hidden>
                    <form method="POST" id="sendMessage" onsubmit="return SendMessage()" action="/Communion/SendMessageInDialog">
                        <div>
                            <input type="text" id="dialogId" name="DialogId" value="" class="hide">
                            <div class="send-wrap">
                                <textarea class="form-control send-message" id="messageInput" style="max-width: none;" oninput="LockedButton('messageInput', 'buttonSendMessage')" name="Text" rows="3" placeholder="Введите сообщение..."></textarea>
                            </div>
                            <div class="btn-panel">
                                <button type="submit" class="col-lg-4 text-right btn send-message-btn pull-right" id="buttonSendMessage" disabled>
                                    <i class="fa fa-plus"> Отправить </i>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>