@model IEnumerable<University.Models.Dto.DialogToUsersDto>
@{
    ViewBag.Title = "Index";
}

@Scripts.Render("~/scripts/jquery-3.1.1.js")
@Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")

<head>
    <script type="text/javascript" src="/scripts/script.js">
    </script>
    <script type="text/javascript" src="/scripts/communion.js">
    </script>
    <link href="/Content/Site.css" rel="stylesheet">
    <style>
        .form-element-label-name {
            font: inherit;
            font-size: 120%;
        }

        .form-element-label-time {
            font: inherit;
            font-size: 90%;
        }

        .form-element-textarea {
            width: 100%;
            max-width: 600px;
        }

        div {
            word-wrap: break-word;
        }

    </style>
</head>

<h2>Диалоги</h2>


<div class="container">
    <div class="col-md-6">
        <table class="table" id="ListDialogs">
            <tbody>
            @foreach (var dialog in Model)
            {
                @Html.Partial("PartialViewDialog", dialog)
            }
            </tbody>
        </table>
    </div>
    <div class="col-md-6" id="currentDialog">
        <p>Выберите диалог или создайте новый</p>
    </div>
</div>