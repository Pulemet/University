@using System.Drawing
@using University.Models
@using University.Models.Helper
@model University.Models.Dto.UserDto
@{
    ViewBag.Title = "Моя страница";
}

<head>
    <style>
    </style>
</head>

<div class="container">
    <div class="row">
        <div class="col-md-2" style="margin-top: 13px;">
            @Html.Partial("PartialViewSaidBar")
        </div>

            <div class="col-sm-9 toppad">
                <div class="panel panel-default">
                    <div class="panel-heading resume-heading">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="col-xs-12 col-sm-4" align="center">
                                    <img alt="Фото" src="@Model.Photo" class="circular-square">
                                </div>

                                <div class="col-xs-12 col-sm-8">
                                    <table class="table table-user-information">
                                        <tbody>
                                            <tr>
                                                <td>ФИО</td>
                                                <td>@Model.SurName @Model.PatronymicName @Model.FirstName</td>
                                            </tr>
                                            <tr>
                                                <td>E-mail</td>
                                                <td>@Model.Email</td>
                                            </tr>
                                            <tr>
                                                @{ string gender = Model.Gender == UserGenders.Male ? "Мужской" : "Женский";}
                                                <td>Пол</td>
                                                <td>@gender</td>
                                            </tr>
                                            <tr>
                                                <td>Дата рождения</td>
                                                <td>@Model.BirthDate.ToLongDateString()</td>
                                            </tr>
                                            @if (Model.UserRole == UserRoles.Student)
                                            {
                                                <tr>
                                                    <td>Факультет</td>
                                                    <td>@Model.Faculty</td>
                                                </tr>
                                                <tr>
                                                    <td>Специальность</td>
                                                    <td>@Model.Speciality</td>
                                                </tr>
                                                <tr>
                                                    <td>Группа</td>
                                                    <td>@Model.Group</td>
                                                </tr>
                                            }
                                            else
                                            {
                                                if (Model.UserRole == UserRoles.Admin)
                                                {
                                                    <tr>
                                                        <td>Роль</td>
                                                        <td>Администратор</td>
                                                    </tr>
                                                }
                                                else
                                                {
                                                    <tr>
                                                        <td>Преподаватель кафедры</td>
                                                        <td>@Model.Department</td>
                                                    </tr>
                                                }
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="bs-callout bs-callout-danger">
                    <h4>О себе</h4>
                    <p>Summary...</p>
                </div>
                <div class="bs-callout bs-callout-danger">
                    <h4>Интересы</h4>
                    <p>Research Interests...</p>
                </div>
                <div class="bs-callout bs-callout-danger">
                    <h4>Образование</h4>
                    <table class="table table-user-information">
                        <tbody>
                            <tr>
                                <td>Институт</td>
                                <td>БГУИР</td>
                            </tr>
                            <tr>
                                <td>Годы обучения</td>
                                <td>2012-2017</td>
                            </tr>
                        </tbody>
                    </table>

                </div>
            </div>
        

        </div>
    </div>