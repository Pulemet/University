@using System.Drawing
@using University.Models
@using University.Models.Helper
@model University.Models.Dto.UserDto
@{
    ViewBag.Title = "Моя страница";
}

<head>
    <style>
    </style>
</head>

<div class="container">
    <div class="col-md-2 block-said-bar">
        <h4> @ViewBag.Title </h4>
        @Html.Partial("PartialViewSaidBar")
    </div>

    <div class="row">
        <div class="col-xs-12 col-md-6 toppad">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title">@Model.SurName @Model.PatronymicName @Model.FirstName</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-4 col-lg-4" align="center">
                            <img alt="Фото" src="@Model.Photo" class="circular-square">
                        </div>
                        <div class="col-md-8 col-lg-8">
                            <table class="table table-user-information">
                                <tbody>
                                    <tr>
                                        <td>E-mail</td>
                                        <td>@Model.Email</td>
                                    </tr>
                                    <tr>
                                        @{ string gender = Model.Gender == UserGenders.Male ? "Мужской" : "Женский";}
                                        <td>Пол</td>
                                        <td>@gender</td>
                                    </tr>
                                    <tr>
                                        <td>Дата рождения</td>
                                        <td>@Model.BirthDate.ToLongDateString()</td>
                                    </tr>
                                    <tr>
                                        <td>Роль</td>
                                        <td>@Model.UserRole</td>
                                    </tr>
                                    @if (Model.UserRole == UserRoles.Student)
                                    {
                                        <tr>
                                            <td>Факультет</td>
                                            <td>@Model.Faculty</td>
                                        </tr>
                                        <tr>
                                            <td>Специальность</td>
                                            <td>@Model.Speciality</td>
                                        </tr>
                                        <tr>
                                            <td>Группа</td>
                                            <td>@Model.Group</td>
                                        </tr>
                                    }
                                    else
                                    {
                                        if (Model.UserRole == UserRoles.Admin)
                                        {
                                            <tr>
                                                <td>Роль</td>
                                                <td>Администратор</td>
                                            </tr>
                                        }
                                        else
                                        {
                                            <tr>
                                                <td>Преподаватель кафедры</td>
                                                <td>@Model.Department</td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>