@using University.Models.Helper
@model University.Models.Dto.UserInfoDto

<div class="col-md-10">
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="row">
                <div class="col-md-4 col-lg-4" align="center">
                    <img src="@Model.Photo" class="circular-square-users">
                </div>
                <div class="col-sm-6 col-md-8">
                    <h4>
                        <i class="fa fa-university fa"> <a href="/Home/UserPage/@Model.Id"> @Model.SurName @Model.FirstName </a></i>
                    </h4>
                    <p>
                        @{ string role = @Model.UserRole == @UserRoles.Student ? "Студент" : "Преподаватель"; }
                        <i class="glyphicon glyphicon-user"> @role </i>
                        <br/>

                        <i class="glyphicon glyphicon-envelope"> @Model.Email </i>
                        <br/>
                    </p>
                    <div class="btn-group">
                        <a class="btn btn-success" onclick="ShowFormSendMessageD('@Model.Id', '@Model.SurName @Model.FirstName')" id="show-button">
                            <i class="fa fa-envelope fa"> Написать сообщение </i>
                        </a>
                    </div>
                    @{
                        if (!Model.IsFriend)
                        {
                            <div class="btn-group">
                                <a class="btn btn-danger" onclick="AddFriend('@Model.Id', '@Model.Id')" id="@Model.Id">
                                    <i class="fa fa-plus fa"> Добавить в друзья </i>
                                </a>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>