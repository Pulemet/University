@model University.Models.Dto.DialogDto

@{
    ViewBag.Title = "DialogPage";
}

@Scripts.Render("~/scripts/jquery-3.1.1.js")
@Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")

<head>
    <script type="text/javascript" src="/scripts/Script.js">
    </script>
</head>

<style>
    
    .form-element-label-name {
        font: inherit;
        font-size: 120%;
    }

    .form-element-label-time {
        font: inherit;
        font-size: 90%;
    }

</style>

<h2>Сообщения</h2>


<div class="container">
    <div id="formMessages" class="form-horizontal col-md-6 col-lg-offset-3">
        @{
            if (Model.Messages.Count == 0)
            {
                <div id="noMessages">
                    <p>Список сообщений пуст</p>
                </div>
            }
            else
            {
                foreach (var msg in Model.Messages)
                {
                    @Html.Partial("Message", msg)
                }
            }
        }
    </div>
    <div class="form-horizontal col-md-6 col-lg-offset-3">
        @Html.Partial("PartialSendMessage")
    </div>
</div>