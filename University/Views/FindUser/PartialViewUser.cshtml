@model University.Models.ApplicationUser

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6">
            <div class="panel panel-info">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-4 col-lg-4" align="center">
                            <img alt="Фото" src="@Model.Photo" class="circular-square-users">
                        </div>
                        <div class="col-sm-6 col-md-8">
                            <h4>@Model.SurName @Model.FirstName</h4>
                            <p>
                                <i class="glyphicon glyphicon-envelope">
                                </i>
                                @Model.Email
                                <br />
                                <i class="glyphicon glyphicon-user">Студент/Преподаватель</i>
                                <br />
                                <i class="glyphicon glyphicon-gift">
                                </i>
                                @Model.BirthDate.ToLongDateString()
                            </p>
                            <div class="btn-group">
                                <button type="button" class="btn btn-primary" onclick="window.location.href='/Home/UserPage/@Model.Id'">Просмотреть профиль</button>
                            </div>
                            <div class="btn-group">
                                <button type="submit" class="btn btn-success" id="@Model.Id" onclick="AddFriend('@Model.Id', '@Model.Id')">Добавить в друзья</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>