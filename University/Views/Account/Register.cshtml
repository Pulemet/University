@using University.Models.Helper
@model University.Models.RegisterViewModel

@{
    ViewBag.Title = "Регистрация";
}

@Styles.Render("~/Content/css")
@Scripts.Render("~/scripts/jquery-3.1.1.js")
@Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")

<head>
    <script type="text/javascript" src="/scripts/account.js">

    </script>

    <script>
        $(document).ready(function () {
            StartSelect("role");
            StartSelect("gender");
            StartSelect("faculty");
            StartSelect("department");
        });
    </script>

    <style>
        img {
            display: block;
            max-width: 230px;
            max-height: 250px;
            width: auto;
            height: auto;
        } 
    </style>
</head>


<div class="container">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
    {
        SelectList roles = new SelectList(
            new List<SelectListItem>
            {
            new SelectListItem { Text = "Студент", Value = "student" },
            new SelectListItem { Text = "Преподаватель", Value = "teacher" },
            }, "Value", "Text");

        SelectList genders = new SelectList(
                    new List<SelectListItem>
                    {
            new SelectListItem { Text = "Мужской", Value = "male" },
            new SelectListItem { Text = "Женский", Value = "female" },
                    }, "Value", "Text");

        @Html.AntiForgeryToken()
        <div class="col-md-8">
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <h3> @ViewBag.Title </h3>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Ваш e-mail" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Введите пароль" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Повторите пароль" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = "Ваше имя" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @Html.TextBoxFor(m => m.SurName, new { @class = "form-control", placeholder = "Ваша фамилия" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @Html.TextBoxFor(m => m.PatronymicName, new {@class = "form-control", placeholder = "Ваше отчество"})
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @Html.DropDownListFor(m => m.Gender, genders, "Пол", new { @class = "form-control select-default", id = "gender", onchange= "ChangedColorSelect('gender')" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @Html.EditorFor(m => m.BirthDate, new { htmlAttributes = new { @class = "date-input form-control select-default", placeholder = "Дата рождения", id = "date" } })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @Html.DropDownListFor(m => m.Role, roles, "Выбор роли", new {@class = "form-control select-default", id = "role"})
                </div>
            </div>

            <div id="teacherParams" hidden>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        @Html.DropDownListFor(m => m.Department, ViewData["Departments"] as SelectList, "Выбор кафедры", new {@class = "form-control select-default", id = "department", required = "true", data_val_required = "Выберите кафедру", data_val = "true", onchange = "ChangedColorSelect('department')" })
                    </div>
                </div>
            </div>

            <div id="studentParams" hidden>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        @Html.DropDownListFor(m => m.Faculty, ViewData["Faculties"] as SelectList, "Выбор факультета", new {@class = "form-control select-default", id = "faculty", required = "true", data_val_required = "Выберите факультет", data_val = "true"})
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        @Html.DropDownListFor(m => m.Speciality, ViewData["Specialities"] as SelectList, "Выбор специальности", new {@class = "form-control select-default", id = "speciality", required = "true", data_val_required = "Выберите специальность", data_val = "true"})
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        @Html.DropDownListFor(m => m.Group, ViewData["Groups"] as SelectList, "Выбор группы", new {@class = "form-control select-default", id = "group", required = "true", data_val_required = "Выберите группу", data_val = "true"})
                    </div>
                </div>
            </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="signup-button" value="Регистрация" />
                    </div>
                </div>
            </div>

        <div class="col-md-4">
            <div class="form-group">
                <img id="output" src="@ConstDictionary.NO_IMAGE" alt="Фото" aligh="left" />
            </div>
            <div class="form-group">
                <div class="fileUpload btn btn-primary">
                    <span> Загрузить фото </span>
                    <input type="file" name="image" class="upload" onchange="addAvatar(event)" />
                </div>
            </div>
        </div>
    }

</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <link href='@Url.Content("~/Content/themes/base/all.css")' rel="stylesheet" type="text/css" />
    <script src='@Url.Content("~/Scripts/jquery-ui-1.12.1.min.js")' type="text/javascript"></script>
    <script src='@Url.Content("~/Scripts/script.js")' type="text/javascript"></script>
}