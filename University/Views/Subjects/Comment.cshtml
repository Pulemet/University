@model University.Models.Dto.CommentDto

<head>
    <link rel="stylesheet" href="~/Content/font-awesome/css/font-awesome.min.css">
</head>

<hr />

<article class="row">
    <div class="col-md-2 col-sm-2 hidden-xs">
        <figure class="thumbnail">
            <img class="img-responsive" alt="Photo" />
            <figcaption class="text-center">@Model.SurName @Model.FirstName</figcaption>
        </figure>
    </div>
    <div class="col-md-10 col-sm-10">
        <div class="panel panel-default arrow left">
            <div class="panel-body">
                <header class="text-left">
                    <div class="comment-user">
                        <i class="fa fa-user"></i> @Model.SurName @Model.FirstName
                    </div>
                    <time class="comment-date" datetime="16-12-2014 01:05"><i class="fa fa-clock-o"></i> @String.Format("{0:dd.MM.yyyy}", Model.DateAdd) в @String.Format("{0:H.mm}", Model.DateAdd) </time>
                </header>
                <div class="comment-post">
                    <p>
                        @Model.Text
                    </p>
                </div>
                <p class="text-right">
                    <a href="#" class="btn btn-default btn-sm"><i class="fa fa-reply"></i> reply</a>
                </p>
            </div>
        </div>
    </div>
</article>