@model University.Models.Dto.MaterialDto

@{
    ViewBag.Title = "Material";
}

@Scripts.Render("~/scripts/jquery-3.1.1.js")
@Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")

<head>
    <link rel="stylesheet" href="~/Content/font-awesome/css/font-awesome.min.css">
    <script type="text/javascript" src="/scripts/script.js">
    </script>

    <link href="/Content/Site.css" rel="stylesheet">

    <style>
        .form-element-textarea {
            width: 100%;
            max-width: 600px;
        }

        div {
            word-wrap: break-word;
        }
    </style>
</head>

<div class="container">
    <div class="row">
        <div class="panel-heading">
            <div class="panel-title text-center">
                <h2 class="title">@Model.Name</h2>
                <hr id="form-line" />
            </div>
        </div>

        <blockquote class="quote-box">
            <p class="quotation-mark">
                “
            </p>
            <p class="quote-text btn btn-success">
                <a href="@Model.FileLink" download>
                    <i class="fa fa-download fa" style="color: #fff;">
                        Скачать файл
                    </i>
                </a>
            </p>
            <hr>
            <div class="blog-post-actions">
                <p class="blog-post-bottom pull-left" style="color: #337ab7;">
                    @Model.SurName @Model.FirstName
                </p>
                <p class="blog-post-bottom pull-right">
                    <span class="badge quote-badge">
                        <i class="fa fa-clock-o fa"> @String.Format("{0:dd.MM.yyyy}", Model.DateLoad) в @String.Format("{0:H.mm}", Model.DateLoad) </i>
                    </span>
                </p>
            </div>
        </blockquote>

        <div id="formComments" class="form-horizontal">
            @{
                if (Model.Comments.Count == 0)
                {
                    <div id="noComments">
                        <p>Пользователи пока не оставляли комментариев</p>
                    </div>
                }
                else
                {
                    foreach (var comment in Model.Comments)
                    {
                        @Html.Partial("Comment", comment)
                    }
                }
            }
        </div>
        <div class="form-horizontal">
            @Html.Partial("PartialAddComment")
        </div>
    </div>
</div>
