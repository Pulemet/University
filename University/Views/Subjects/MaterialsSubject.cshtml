@using University.Models.Tables
@model IEnumerable<University.Models.Dto.MaterialDto>

@{
    ViewBag.Title = "Materials";
}

@Scripts.Render("~/scripts/jquery-3.1.1.js")
@Scripts.Render("~/scripts/jquery.form.js")
@Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")

<head>
    <script type="text/javascript" src="/scripts/communion.js">
    </script>
</head>

<div class="container">
    <div class="col-md-6">
            @Html.Partial("PartialViewMaterials", Model)
    </div>

    <div class="col-md-6">
        @{ string subjectId = Url.RequestContext.RouteData.Values["id"].ToString();

            <input type="text" name="SubjectId" id="SubjectId" value="@Int32.Parse(subjectId)" class="hide">

            <label>Описание</label>
            <br/>
            <textarea class="form-element form-element-textarea" id="Name" name="Name" rows="7" placeholder="Описание"></textarea>
            <hr/>
            <br/>

            <select name="TypeLesson" id="TypeLesson">
                <option value="Lecture">Лекции</option>
                <option value="Practic">Практические занятия</option>
            </select>

            <label class="control-label">Выберите файл</label>
            <p>
                <input type="file" name="loadFile" id="loadFile"/>
            </p>
            <br/>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn" onclick="AddMaterialClick()" value="Добавить"></button>
                </div>
            </div>
        }
</div>
</div>