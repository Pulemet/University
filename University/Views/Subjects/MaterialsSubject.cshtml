@using University.Models.Helper
@model IEnumerable<University.Models.Dto.MaterialDto>

@{
    ViewBag.Title = "Материалы";
}

@Scripts.Render("~/scripts/jquery-3.1.1.js")
@Scripts.Render("~/scripts/jquery.form.js")
@Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")

<head>
    <script type="text/javascript" src="/scripts/script.js">
    </script>
</head>

<style>
    #style-border {
        display: block;
        -webkit-margin-before: 0.5em;
        -webkit-margin-after: 0.5em;
        -webkit-margin-start: auto;
        -webkit-margin-end: auto;
    }

    #lecture-content {
        max-height: 60%;
        overflow: auto;
        min-height: 60%;
        margin-top: 20px;
    }

    #panel-id {
        height: 600px;
        margin-top: 0;
    }

    #panel-heading {
        max-height: 400px;
    }
</style>

<div class="container">
    <div class="row">
        <div class="panel-heading">
            <div class="panel-title text-center">
                <h2 class="title">@ViewBag.SubjectName</h2>
                <hr id="form-line" />
            </div>
        </div>
        <div class="col-md-6 col-md-offset-3" id="buttonNewMaterial">
            <div class="form-group">
                <div class="col-sm-3">
                    <button type="submit" class="btn" onclick="NewMaterialClick()"> Добавить новый материал </button>
                </div>
            </div>
        </div>

        <div class="col-md-4 col-md-offset-4" id="formAddMaterial" hidden>
            @{
                string subjectId = Url.RequestContext.RouteData.Values["id"].ToString();
                <input type="text" name="SubjectId" id="SubjectId" value="@Int32.Parse(subjectId)" class="hide">
                <br />
                <textarea class="form-element form-element-textarea" id="inputDescriptionMaterial" name="Name" rows="5" oninput="LockedButton('inputDescriptionMaterial', 'buttonAddMaterial')" placeholder="Добавьте описание"></textarea>
                <br />

                <div class="form-group">
                    <select class="form-material" name="TypeLesson" id="TypeLesson">
                        <option value="Lecture"> Лекции </option>
                        <option value="Practic"> Практические занятия </option>
                    </select>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="fileUpload btn-upload">
                            <span> Прикрепить </span>
                            <input type="file" class="upload" name="loadFile" id="loadFile" />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-3">
                            <button type="submit" class="btn" onclick="AddMaterialClick()" id="buttonAddMaterial" disabled> Добавить </button>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-9" align="right">
                            <button type="reset" class="btn" id="buttonAddMaterial" onclick="CloseFormAddMaterial()"> Отмена </button>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-subject" style="border-style:none;">
                <div class="panel-heading">
                    <div class="row" id="panel-id">
                        <div class="col-xs-6">
                            <a href="#" class="active" id="lecture-form-link">Лекции</a>

                        </div>
                        <div class="col-xs-6">
                            <a href="#" id="practical-form-link">Практические занятия</a>

                        </div>
                        <div class="col-md-12" id="lecture-content">
                            <hr id="border-style" />
                            @foreach (var material in Model.Where(m => m.TypeLesson == Enum.GetName(typeof(TypeLesson), 0)))
                            {
                                @Html.Partial("PartialViewMaterial", material)
                            }
                        </div>
                        <div class="col-md-12" id="practical-content" hidden>
                            <hr id="style-border" />
                            @foreach (var material in Model.Where(m => m.TypeLesson == Enum.GetName(typeof(TypeLesson), 1)))
                            {
                                @Html.Partial("PartialViewMaterial", material)
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
